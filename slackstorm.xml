<?xml version="1.0" encoding="UTF-8"?>
<project name="slackstorm" default="all">
  
  
  <property file="slackstorm.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <property name="project.jdk.home" value=""/>
  <property name="project.jdk.bin" value=""/>
  <property name="project.jdk.classpath" value=""/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module SlackStorm -->
  
  <dirname property="module.slackstorm.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.slackstorm" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.slackstorm" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.slackstorm" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.slackstorm" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="slackstorm.output.dir" value="undefined"/>
  <property name="slackstorm.testoutput.dir" value="undefined"/>
  
  <path id="slackstorm.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="slackstorm.module.production.classpath"/>
  
  <path id="slackstorm.runtime.production.module.classpath"/>
  
  <path id="slackstorm.module.classpath"/>
  
  <path id="slackstorm.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.slackstorm">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.slackstorm">
    <patternset refid="excluded.from.module.slackstorm"/>
  </patternset>
  
  
  <target name="compile.module.slackstorm" depends="compile.module.slackstorm.production,compile.module.slackstorm.tests" description="Compile module SlackStorm"/>
  
  <target name="compile.module.slackstorm.production" depends="register.custom.compilers" description="Compile module SlackStorm; production classes"/>
  
  <target name="compile.module.slackstorm.tests" depends="register.custom.compilers,compile.module.slackstorm.production" description="compile module SlackStorm; test classes" unless="skip.tests"/>
  
  <target name="clean.module.slackstorm" description="cleanup module">
    <delete dir="${slackstorm.output.dir}"/>
    <delete dir="${slackstorm.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.slackstorm" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.slackstorm" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>